<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="es.ua.eduardo.duack.DescripcionLugarActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/nombre_lugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Nombre del lugar"
            android:textSize="25dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagen_lugar"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:contentDescription="fotografía"
            android:src="@android:drawable/ic_delete" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/logo_direccion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Logo de la direccion"
                android:src="@mipmap/mapslogo" />

            <TextView
                android:id="@+id/direccion_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Direccion del lugar"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo_localidad"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:contentDescription="Logo de la localidad"
                android:src="@android:drawable/ic_menu_mapmode" />

            <TextView
                android:id="@+id/localidad_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Localidad, provincia y pais del lugar"
                android:textAppearance="?android:attr/textAppearanceMedium"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/logo_url"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Logo de la web"
                android:src="@mipmap/internetlogo" />

            <TextView
                android:id="@+id/url_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Página web del lugar"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo_precio"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:contentDescription="logo del precio"
                android:src="@android:drawable/btn_star" />

            <TextView
                android:id="@+id/precio_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Precio del lugar"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/logo_telefono"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Logo del telefono"
                android:src="@mipmap/phonelogo" />

            <TextView
                android:id="@+id/telefono_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Telefono del lugar"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo_guia"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:contentDescription="Logo de la guia"
                android:src="@android:drawable/ic_menu_myplaces" />

            <TextView
                android:id="@+id/guia_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="¿Hay guía?"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo_idioma"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:contentDescription="Logo del idioma"
                android:src="@android:drawable/ic_menu_info_details" />

            <TextView
                android:id="@+id/idioma_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Idioma del lugar"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>