<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/agua"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/duackcompleto"
        android:contentDescription="Imagen duack"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:contentDescription="Texto acerca de"
        android:gravity="top|center"
        android:text="@string/acerca_de"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="@string/gmail_contacto"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/acercade_mail"
            android:layout_width="43dp"
            android:layout_height="33dp"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/gmaillogo" />

    </LinearLayout>

</LinearLayout>